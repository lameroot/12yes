        <!-- Json -->

        <!-- Test -->
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-test</artifactId>
            <version>${spring.version}</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.8.2</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <profiles>

        <profile>
            <id>js-compression</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <js.debug>false</js.debug>
                <start.page>index.html</start.page>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.mortbay.jetty</groupId>
                        <artifactId>jetty-maven-plugin</artifactId>
                        <version>8.1.14.v20131031</version>
                        <executions>
                            <execution>
                                <phase>integration-test</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <!--<jettyXml>src/test/config/jetty.xml</jettyXml>-->
                            <scanIntervalSeconds>0</scanIntervalSeconds>
                            <!--<stopPort>8005</stopPort>
                            <stopKey>STOP</stopKey>-->
                            <webApp>
                                <contextPath>/testjs</contextPath>
                                <webInfIncludeJarPattern>.*/spring-web.*.jar$</webInfIncludeJarPattern>
                            </webApp>
                            <systemProperties>
                                <systemProperty>
                                    <name>server.root</name>
                                    <value>${project.build.outputDirectory}</value>
                                </systemProperty>
                                <systemProperty>
                                    <name>org.mortbay.jetty.servlet.SessionURL</name>
                                    <value>none</value>
                                </systemProperty>
                            </systemProperties>
                            <connectors>
                                <connector implementation="org.eclipse.jetty.server.nio.SelectChannelConnector">
                                    <port>8988</port>
                                    <forwarded>true</forwarded>
                                </connector>
                                <!--
                                <connector implementation="org.eclipse.jetty.server.ssl.SslSelectChannelConnector">
                                    <port>8442</port>
                                    <keystore>src/test/resources/server.keystore</keystore>
                                    <keyPassword>123456</keyPassword>
                                    <password>123456</password>
                                    <forwarded>true</forwarded>
                                </connector>
                                -->
                            </connectors>
                        </configuration>
                    </plugin>
                </plugins>
            </build>

        </profile>

        <profile>
            <id>js-build</id>
            <properties>
                <start.page>home.html</start.page>
            </properties>
            <build>

                <plugins>
                    <plugin>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <version>1.7</version>
                        <executions>
                            <execution>
                                <id>js-build</id>
                                <phase>process-resources</phase>
                                <configuration>
                                    <target>
                                        <ant antfile="build.xml" target="compile"/>
                                        <ant antfile="build.xml" target="sass"/>
                                    </target>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <build>
        <resources>
            <resource>
                <directory>${basedir}/src/main/resources</directory>
                <filtering>false</filtering>
                <includes>
                    <include>*.jks</include>
                    <include>*.cer</include>
                    <include>profile.xml</include>
                    <include>config.properties</include>
                    <include>spring/**</include>
                    <include>testspring/**</include>
                    <include>logback.xml</include>
                    <include>keystore.jceks</include>
                    <include>i18n/**</include>
                </includes>
            </resource>
            <resource>
                <directory>${basedir}/src/main/webapp/WEB-INF</directory>
                <includes>
                    <include>web.xml</include>
                </includes>
                <filtering>true</filtering>
                <targetPath>${project.build.directory}</targetPath>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.7</source>
                    <target>1.7</target>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.7</version>
                <executions>
                    <execution>
                        <id>js-refresh</id>
                        <phase>process-resources</phase>
                        <configuration>
                            <target>
                                <ant antfile="build.xml" target="refresh"/>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>ant-contrib</groupId>
                        <artifactId>ant-contrib</artifactId>
                        <version>1.0b3</version>
                        <exclusions>
                            <exclusion>
                                <groupId>ant</groupId>
                                <artifactId>ant</artifactId>
                            </exclusion>
                        </exclusions>
                    </dependency>
                </dependencies>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <failOnMissingWebXml>false</failOnMissingWebXml>
                </configuration>
            </plugin>

        </plugins>
    </build>

