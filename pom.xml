    <artifactId>12yes</artifactId>
    <packaging>war</packaging>
    <version>1.0.0</version>
    <name>12yes</name>

    <properties>
        <app.out>${project.build.directory}/${project.build.finalName}</app.out>
        <app.dir>${basedir}/src/main/webapp</app.dir>
        <js.debug>true</js.debug>
        <js.compiler>yui</js.compiler>
        <spring.version>4.0.0.RELEASE</spring.version>
        <spring-data-neo4j.version>3.0.0.RELEASE</spring-data-neo4j.version>
        <spring-data.version>1.4.2.RELEASE</spring-data.version>
        <hibernate.version>4.2.8.Final</hibernate.version>
        <mysql.version>5.1.27</mysql.version>
        <org.slf4j-version>1.7.2</org.slf4j-version>
        <log4j.version>1.2.17</log4j.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-core</artifactId>
            <version>${spring.version}</version>
